# Environment Configuration Template
# Copy this file to .env and update with your values

# Application Environment
STAGE=dev
AWS_REGION=us-east-1
LOG_LEVEL=DEBUG

# DynamoDB Configuration
DYNAMODB_TABLE=truenorth-coaching-conversations-dev
# DYNAMODB_ENDPOINT=http://localhost:8000  # For local DynamoDB

# S3 Configuration  
PROMPTS_BUCKET=truenorth-coaching-prompts-dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_SSL=false
# REDIS_PASSWORD=your_redis_password

# AWS Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_REGION=us-east-1

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# Session Configuration
SESSION_TTL_HOURS=24
CONVERSATION_TTL_DAYS=30

# LLM Configuration
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT_SECONDS=30

# Memory Management
MAX_CONVERSATION_MEMORY=4000

# AWS Credentials (use AWS CLI configuration instead for production)
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key